<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/be">

    <!-- Existing Buttons -->

    <Button
        android:id="@+id/buttonShowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click"
        android:textSize="25sp"
        android:backgroundTint="#AD2600FF" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi Foodiee"
        android:textSize="25dp"
        android:backgroundTint="#97039BE5"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonShowImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:layout_marginTop="16dp"
        android:textSize="25dp"
        android:backgroundTint="#4DFB8C00" />

    <ImageView
        android:id="@+id/imageViewExample"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/don"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to the terms and conditions"
        android:layout_marginTop="16dp"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonGoToRadioActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customize_your_order"
        android:layout_marginTop="16dp"
        android:textSize="25dp"
        android:backgroundTint="#865A00C1" />

    <Button
        android:id="@+id/buttonGoToFormActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill The Form"
        android:layout_marginTop="16dp"
        android:textSize="25dp"
        android:backgroundTint="#80009AC1" />

    <Button
        android:id="@+id/buttonGoToCheckActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#9A234743"
        android:text="Check list view"
        android:textSize="25dp" />

    <!-- Button to navigate to RecyclerView Activity -->
    <Button
        android:id="@+id/buttonGoToRecyclerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to RecyclerView"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

</LinearLayout>
